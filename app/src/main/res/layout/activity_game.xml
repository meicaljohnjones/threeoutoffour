<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=''
        app:titleTextColor="#fff"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageSquare"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

        <ImageView
            android:id="@+id/topLeftImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"

            android:cropToPadding="false"
            android:scaleType="fitStart"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/topRightImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"

            android:cropToPadding="false"
            android:scaleType="fitStart"

            app:layout_constraintStart_toEndOf="@+id/topLeftImage"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/bottomLeftImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"

            android:cropToPadding="false"
            android:scaleType="fitStart"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLeftImage"
            />

        <ImageView
            android:id="@+id/bottomRightImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"

            android:cropToPadding="false"
            android:scaleType="fitStart"

            app:layout_constraintStart_toEndOf="@+id/bottomLeftImage"
            app:layout_constraintTop_toBottomOf="@+id/topRightImage"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:focusable="false"
        
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageSquare"
        app:layout_constraintWidth_percent=".9">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/answerText"
            android:text="asd"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        
        android:text=""
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Hint"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintHorizontal_chainStyle="packed"

        android:layout_marginTop="8dp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Hint"
        android:onClick="showHintsMenu"

        app:icon="@drawable/star_border"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"

        app:layout_constraintEnd_toEndOf="@+id/WatchAd"

        app:layout_constraintStart_toEndOf="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/WatchAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Ad"
        android:onClick="showAd"

        app:icon="@drawable/local_atm"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"

        app:layout_constraintStart_toEndOf="@+id/Hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginLeft="5dp"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/choiceGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.90"
        app:layout_constraintHeight_percent="0.24"
        android:layout_marginTop="14dp" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"
            android:textSize="32sp"

            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"
            android:textSize="32sp"

            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice00"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"
            android:textSize="32sp"

            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice03"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"
            android:textSize="32sp"

            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"
            android:textSize="32sp"

            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice03"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice05"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"

            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice00"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice06"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"

            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice05"
            app:layout_constraintTop_toBottomOf="@+id/choice00"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice07"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"

            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice06"
            app:layout_constraintTop_toBottomOf="@+id/choice00"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice08"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"

            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice07"
            app:layout_constraintTop_toBottomOf="@+id/choice00"
            app:layout_constraintWidth_percent="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choice09"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="\?"

            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/choice08"
            app:layout_constraintTop_toBottomOf="@+id/choice00"
            app:layout_constraintWidth_percent="0.17" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>